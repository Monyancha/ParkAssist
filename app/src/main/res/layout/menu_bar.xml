<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"

    android:orientation="horizontal">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeButton"
            android:src="@drawable/home"
            android:background="@color/normal_color"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="false" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/parkMeButton"
            android:src="@drawable/park_me"
            android:background="@color/normal_color"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:layout_weight="1"
            android:focusable="false" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/walkDirectionsButton"
            android:src="@drawable/directions_walk"
            android:background="@color/normal_color"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="false" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/garageButton"
            android:src="@drawable/garage"
            android:background="@color/normal_color"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:focusable="false" />




</LinearLayout>
